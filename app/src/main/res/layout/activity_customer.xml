<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/colorLight" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <HorizontalScrollView android:id="@+id/scrollViewMallList" android:background="@color/colorLight" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="0dp" android:layout_marginTop="5dp" android:layout_marginRight="0dp" app:layout_constraintHorizontal_bias="0" >
        <LinearLayout android:orientation="horizontal" android:id="@+id/layout_MallList" android:layout_width="wrap_content" android:layout_height="match_parent"/>
    </HorizontalScrollView>
    <ListView android:id="@+id/lvProductList" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="65dp" android:layout_marginBottom="0dp"/>
    <Button android:textColor="@color/colorLight" android:id="@+id/btnConfirmOrder" android:background="@color/colorPrimary" android:visibility="gone" android:layout_width="match_parent" android:layout_height="40dp" android:text="Confirm(10)" android:layout_alignParentBottom="true" android:textAllCaps="false"/>
    <Button android:textColor="@color/colorLight" android:id="@+id/btnCancelOrder" android:background="@color/colorRed" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="40dp" android:text="Cancel" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:textAllCaps="false"/>
</RelativeLayout>
