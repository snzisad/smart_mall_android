<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:paddingTop="10dp" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textColor="@color/colorLight" android:gravity="center" android:layout_gravity="center" android:background="@color/colorAsh" android:padding="8dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:text="Product" android:layout_weight="1"/>
            <TextView android:textColor="@color/colorLight" android:gravity="center" android:layout_gravity="center" android:background="@color/colorAsh" android:padding="8dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginRight="2dp" android:text="Shop" android:layout_weight="1"/>
            <TextView android:textColor="@color/colorLight" android:gravity="center" android:layout_gravity="center" android:background="@color/colorAsh" android:padding="8dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginRight="2dp" android:text="Price" android:layout_weight="1"/>
            <TextView android:textColor="@color/colorLight" android:gravity="center" android:layout_gravity="center" android:background="@color/colorAsh" android:padding="8dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginRight="2dp" android:text="Action" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/layoutProductList" android:layout_width="match_parent" android:layout_height="wrap_content">
            <include layout="@layout/layout_shoping_list"/>
            <include layout="@layout/layout_shoping_list"/>
            <include layout="@layout/layout_shoping_list"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:background="@color/colorLight" android:padding="5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="2dp" android:layout_marginBottom="10dp" android:layout_weight="1">
            <TextView android:textColor="@color/colorDark" android:gravity="right" android:layout_width="match_parent" android:layout_height="match_parent" android:text="Total: " android:layout_weight="1"/>
            <TextView android:textColor="@color/colorDark" android:gravity="left" android:id="@+id/tvTotalPrice" android:layout_width="match_parent" android:layout_height="match_parent" android:text="1500" android:layout_weight="1"/>
        </LinearLayout>
        <Button android:textColor="@color/colorLight" android:id="@+id/btnCloseShoping" android:background="@color/colorRed" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="Close Shoping" android:textAllCaps="true"/>
    </LinearLayout>
</ScrollView>
